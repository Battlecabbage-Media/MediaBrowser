@page
@model MediaBrowser.Pages.Directors.DetailsModel

@{
    ViewData["Title"] = Model.Director.Director1;
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>@Html.DisplayFor(model => model.Director.Director1)</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Directed
        </dt>
        <dd class="col-sm-10">
            @foreach (var movie in Model.Director.Movies)
            {
                <div><a asp-page="/Movies/Details" asp-route-id="@movie.MovieId">@movie.Title</a></div>
            }
        </dd>
    </dl>
</div>
